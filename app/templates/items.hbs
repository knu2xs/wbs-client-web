<div class="row">
    <h1>
        WBS List
        <button class="btn btn-primary pull-right" data-toggle="modal" data-target="#newModal">
            <span class="glyphicon glyphicon-plus"></span> New WBS
        </button>
    </h1>
</div>

<div class="row">
    <table class="table table-condensed">
        <thead>
        <tr>
            <th>Code</th>
            <th>Abbreviation</th>
            <th>Description</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {{#each}}
            <tr {{bind-attr class="isSuffix:active"}}>
                <td>{{code}}</td>
                <td>{{abbrev}}</td>
                <td>{{desc}}</td>
                <td>
                    <button {{action 'showEditModal'}} class="btn btn-default btn-sm pull-right">
                        <span class="glyphicon glyphicon-edit"></span> Edit
                    </button>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>

<div class="modal fade" id="newModal" tabindex="-1" role="dialog" aria-labelledby="newModalLabel" aria-hidden="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <form role="form">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">
                        <span aria-hidden="true">&times;</span>
                        <span class="sr-only">Close</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel">New WBS</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="wbs-code" class="control-label">Code</label>
                        {{input type="text" class="form-control" id="wbs-code" placeholder="C04416" tabindex="1"
                        autofocus="true" value=wbsCode}}
                    </div>
                    <div class="form-group">
                        <label for="wbs-short" class="control-label">Short Description</label>
                        {{input type="text" class="form-control" id="wbs-short" placeholder="ARC4" tabindex="2"
                        value=wbsAbbrev}}
                    </div>
                    <div class="form-group">
                        <label for="wbs-long" class="control-label">Long Description</label>
                        {{input type="text" class="form-control" id="wbs-long" tabindex="3"
                        placeholder="ArcGIS 4: Sharing Content on the Web" value=wbsDesc}}
                    </div>
                    <div class="checkbox">
                        <label>
                            {{input type='checkbox' class='glyphicon glyphicon-unchecked' id='is-suffix' tabindex='4'
                            checked=wbsIsSuffix}} this is a WBS code suffix
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="button" {{action "newWbs" todo}} class="btn btn-primary" data-dismiss="modal"
                            default="true">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="newModalLabel" aria-hidden="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <form role="form">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">
                        <span aria-hidden="true">&times;</span>
                        <span class="sr-only">Close</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel">Edit WBS</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="wbs-code" class="control-label">Code</label>
                        {{input type="text" class="form-control" id="wbs-code" placeholder="C04416" tabindex="1"
                        autofocus="true" value=wbsCode}}
                    </div>
                    <div class="form-group">
                        <label for="wbs-short" class="control-label">Short Description</label>
                        {{input type="text" class="form-control" id="wbs-short" placeholder="ARC4" tabindex="2"
                        value=wbsAbbrev}}
                    </div>
                    <div class="form-group">
                        <label for="wbs-long" class="control-label">Long Description</label>
                        {{input type="text" class="form-control" id="wbs-long" tabindex="3"
                        placeholder="ArcGIS 4: Sharing Content on the Web" value=wbsDesc}}
                    </div>
                    <div class="checkbox">
                        <label>
                            {{input type='checkbox' class='glyphicon glyphicon-unchecked' id='is-suffix' tabindex='4'
                            checked=wbsIsSuffix}} this is a WBS code suffix
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="button" {{action "editWbs" todo}} class="btn btn-primary" data-dismiss="modal"
                            default="true">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>